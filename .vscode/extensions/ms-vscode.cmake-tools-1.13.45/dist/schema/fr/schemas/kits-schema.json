					"name": {
						"type": "string",
						"description": "Nom du générateur à utiliser"
					},
					"platform": {
						"type": "string",
						"description": "Plateforme CMake pour l'argument -A"
					},
					"toolset": {
						"type": "string",
						"description": "Ensemble d'outils CMake pour l'argument -T"
					}
				},
				"required": [
					"name"
				]
			}
