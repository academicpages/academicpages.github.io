              </name>
              <et-al term="et-al"/>
              <!-- Bezeichnung geklammert, in Kurzform und nachgestellt
		   ("(Hrsg.)"). -->
              <label form="short" prefix=" (" suffix=")"/>
              <!-- Fehlen die Herausgeber, so werden sie durch ?? ersetzt.
		   <substitute>
		   <names variable="translator"/>
		   <text variable="title"/>
		   </substitute> -->
            </names>
          </if>
          <!-- Für alle anderen Fälle gilt: ??.
	       <else>
	       </else>  -->
