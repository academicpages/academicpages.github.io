<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" page-range-format="minimal" class="in-text" version="1.0" demote-non-dropping-particle="sort-only">
  <!-- Polyglot; journal publishes in English and Portuguese -->
  <info>
    <title>Gazeta MÃ©dica</title>
    <id>http://www.zotero.org/styles/gazeta-medica</id>
    <link href="http://www.zotero.org/styles/gazeta-medica" rel="self"/>
    <link href="http://www.zotero.org/styles/brazilian-journal-of-infectious-diseases" rel="template"/>
    <link href="http://www.gazetamedica.pt/index.php/gazeta/about/submissions" rel="documentation"/>
    <author>
      <name>Patrick O'Brien</name>
    </author>
    <category citation-format="numeric"/>
    <category field="medicine"/>
    <issn>2183-8135</issn>
    <eissn>2184-0628</eissn>
    <updated>2019-10-26T22:39:10+00:00</updated>
