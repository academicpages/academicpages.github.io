<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="note" version="1.0" et-al-min="4" et-al-use-first="1" et-al-subsequent-min="4" et-al-subsequent-use-first="1" initialize-with="." demote-non-dropping-particle="never">
  <!-- Polyglot; journal publishes in French and English -->
  <info>
    <title>Sorbonne Student Law Review - Revue juridique des étudiants de la Sorbonne</title>
    <title-short>SSLR</title-short>
    <id>http://www.zotero.org/styles/sorbonne-student-law-review</id>
    <link href="http://www.zotero.org/styles/sorbonne-student-law-review" rel="self"/>
    <link href="https://sorbonnestudentlawreview.org/charters/charter_EN" rel="documentation"/>
    <link href="https://sorbonnestudentlawreview.org/charters/charter_FR" rel="documentation"/>
    <author>
      <name>Paul Heckler</name>
      <email>paul.heckler@univ-paris1.fr</email>
    </author>
    <category citation-format="note"/>
    <category field="law"/>
    <issn>2647-4867</issn>
    <summary>Zotero style of the Sorbonne Student Law Review/Style zotero de la revue juridique des étudiants de la Sorbonne https://sorbonnestudentlawreview.org</summary>
    <updated>2020-08-18T03:47:54+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>
  <locale xml:lang="fr">
    <terms>
      <term name="editor" form="short">dir.</term>
      <term name="retrieved">consulté le</term>
      <term name="presented at">thèse</term>
    </terms>
  </locale>
  <locale xml:lang="en">
    <terms>
      <term name="retrieved">retrieved on</term>
      <term name="presented at">doctoral thesis</term>
      <term name="open-quote">“</term>
      <term name="close-quote">”</term>
      <term name="open-inner-quote">'</term>
      <term name="close-inner-quote">'</term>
      <term name="page-range-delimiter">-</term>
    </terms>
  </locale>
  <macro name="author">
    <choose>
      <if type="legal_case" match="any">
        <text variable="authority"/>
      </if>
      <else-if match="any" variable="author">
        <names variable="author"/>
      </else-if>
      <else-if match="any" variable="editor collection-editor">
        <choose>
          <!-- for chapter and paper-conference, no author implies the editor is also the author. Name should remain in editor position-->
          <if type="chapter paper-conference" match="none">
            <names variable="editor collection-editor">
              <label form="short" prefix=" (" suffix=")"/>
            </names>
          </if>
        </choose>
      </else-if>
      <else>
        <choose>
          <if match="none" type="entry-encyclopedia entry-dictionary bill legislation chapter paper-conference report">
            <text term="anonymous"/>
          </if>
        </choose>
      </else>
    </choose>
  </macro>
  <macro name="editor">
    <choose>
      <if match="any" type="chapter paper-conference entry-encyclopedia entry-dictionary">
        <group delimiter="&#160;">
          <text term="in" font-style="italic"/>
          <names variable="editor collection-editor">
            <label form="short" prefix=" (" suffix=")"/>
          </names>
        </group>
      </if>
    </choose>
  </macro>
  <macro name="translator">
    <group delimiter="&#160;">
      <text term="translator" form="short"/>
      <names variable="translator"/>
    </group>
  </macro>
  <macro name="author-biblio">
    <choose>
      <if type="legal_case" match="any">
        <text variable="authority"/>
      </if>
      <else-if match="any" variable="author">
        <names variable="author">
          <name name-as-sort-order="all" sort-separator="&#160;">
            <name-part name="family" text-case="capitalize-first" font-variant="small-caps"/>
            <name-part name="given" text-case="capitalize-first" font-variant="normal"/>
          </name>
        </names>
      </else-if>
      <else-if match="any" variable="editor collection-editor">
        <choose>
          <!-- for chapter or paper conference, no author implies the editor is also the author. Name should remain in editor position-->
          <if type="chapter paper-conference" match="none">
            <names variable="editor">
              <name name-as-sort-order="all" sort-separator="&#160;">
                <name-part name="family" text-case="capitalize-first" font-variant="small-caps"/>
                <name-part name="given" text-case="capitalize-first" font-variant="normal"/>
              </name>
              <label form="short" prefix=" (" suffix=")"/>
            </names>
          </if>
        </choose>
      </else-if>
      <else>
        <choose>
          <if match="none" type="entry-encyclopedia entry-dictionary bill legislation chapter paper-conference report">
            <text term="anonymous"/>
          </if>
        </choose>
      </else>
    </choose>
  </macro>
  <macro name="editor-biblio">
    <choose>
      <if match="any" type="chapter paper-conference entry-encyclopedia entry-dictionary">
        <group delimiter="&#160;">
          <text term="in" font-style="italic"/>
          <names variable="editor collection-editor">
            <name name-as-sort-order="all" sort-separator="&#160;">
              <name-part name="family" text-case="capitalize-first" font-variant="small-caps"/>
              <name-part name="given" text-case="capitalize-first" font-variant="normal"/>
            </name>
            <label form="short" prefix=" (" suffix=")"/>
          </names>
        </group>
      </if>
    </choose>
  </macro>
  <macro name="translator-biblio">
    <group delimiter="&#160;">
      <text term="translator" form="short"/>
      <names variable="translator">
        <name name-as-sort-order="all" sort-separator="&#160;">
          <name-part name="family" text-case="capitalize-first" font-variant="small-caps"/>
          <name-part name="given" text-case="capitalize-first" font-variant="normal"/>
        </name>
      </names>
    </group>
  </macro>
  <macro name="note">
    <!-- for commented cases -->
    <choose>
      <if type="legal_case" match="any">
        <group delimiter=" ">
          <text term="note"/>
          <names variable="author"/>
        </group>
      </if>
    </choose>
  </macro>
  <macro name="report-institutional-author">
    <!--forreports published by institution, sets institution as author -->
    <choose>
      <if type="report">
        <choose>
          <if match="none" variable="author editor collection-editor">
            <text variable="publisher" text-case="capitalize-first"/>
          </if>
        </choose>
      </if>
    </choose>
  </macro>
  <macro name="content-title">
    <!-- manages title variable  -->
    <choose>
      <if type="book thesis" match="any">
        <text variable="title" text-case="capitalize-first" font-style="italic"/>
      </if>
      <else-if type="report" match="any">
        <group delimiter=", ">
          <text variable="title" text-case="capitalize-first" font-style="italic"/>
          <text variable="genre"/>
          <text macro="number"/>
        </group>
      </else-if>
      <else-if type="legal_case" match="any">
        <!-- includes extra, date and case number to simplify <citation> and <bibliography> -->
        <group delimiter=", ">
          <text variable="title" font-style="italic"/>
          <text variable="note"/>
          <date form="text" variable="issued"/>
          <text macro="number"/>
        </group>
      </else-if>
      <else-if type="bill legislation" match="any">
        <group delimiter=" ">
          <text variable="number" text-case="capitalize-first"/>
          <text variable="title"/>
        </group>
      </else-if>
      <else>
        <text variable="title" quotes="true"/>
      </else>
    </choose>
  </macro>
  <macro name="title-short">
    <choose>
      <if variable="title-short" match="any">
        <choose>
          <if type="bill legislation" match="any">
            <text variable="title-short" text-case="capitalize-first"/>
          </if>
          <else-if type="article-journal article article-magazine article-newspaper chapter paper-conference" match="any">
            <text variable="title-short" quotes="true"/>
          </else-if>
          <else>
            <text variable="title-short" text-case="capitalize-first" font-style="italic"/>
          </else>
        </choose>
      </if>
      <else-if variable="title" match="any">
        <choose>
          <if type="bill legislation" match="any">
            <text variable="title" text-case="capitalize-first"/>
          </if>
          <else-if type="article-journal article article-magazine article-newspaper chapter paper-conference" match="any">
            <text variable="title" quotes="true"/>
          </else-if>
          <else>
            <text variable="title" text-case="capitalize-first" font-style="italic"/>
          </else>
        </choose>
      </else-if>
      <else>
        <!-- if item has no short title or title, date must be displayed for clarity -->
        <date form="text" variable="issued"/>
      </else>
    </choose>
  </macro>
  <macro name="container-title">
    <choose>
      <if match="any" variable="container-title-short">
        <text variable="container-title-short" font-style="italic"/>
      </if>
      <else>
        <text variable="container-title" text-case="capitalize-first" font-style="italic"/>
      </else>
    </choose>
  </macro>
  <macro name="legislation-report">
    <choose>
      <if type="bill legislation" match="any">
        <group delimiter=",&#160;">
          <group delimiter=" ">
            <text term="volume" form="short"/>
            <text variable="volume"/>
          </group>
          <text variable="section"/>
        </group>
      </if>
    </choose>
  </macro>
  <macro name="publisher">
    <choose>
      <if type="report" match="any">
        <choose>
          <if variable="author editor collection-editor" match="any">
            <!-- publisher not yet included -->
            <group delimiter=", ">
              <text variable="event-place" text-case="capitalize-first"/>
              <text variable="publisher" text-case="capitalize-first"/>
            </group>
          </if>
        </choose>
      </if>
      <else-if type="thesis" match="none">
        <!-- Exclusion of type where publisher behaves differently -->
        <group delimiter=", ">
          <text variable="event-place" text-case="capitalize-first"/>
          <text variable="publisher" text-case="capitalize-first"/>
        </group>
      </else-if>
    </choose>
  </macro>
  <macro name="edition">
    <choose>
      <if match="any" variable="edition">
        <choose>
          <if is-numeric="edition">
            <group delimiter=" ">
              <number variable="edition" form="ordinal"/>
              <text term="edition" form="short"/>
            </group>
          </if>
          <else>
            <text variable="edition"/>
          </else>
        </choose>
      </if>
    </choose>
  </macro>
  <macro name="thesis">
    <choose>
      <if type="thesis" match="any">
        <group delimiter=" ">
          <choose>
            <if variable="genre" match="any">
              <text variable="genre" suffix=","/>
            </if>
            <else>
              <text term="presented at" suffix=","/>
            </else>
          </choose>
          <text variable="publisher" text-case="capitalize-first"/>
        </group>
      </if>
    </choose>
  </macro>
  <macro name="collection">
    <group delimiter=" ">
      <text variable="collection-title" text-case="capitalize-first"/>
      <group delimiter="&#160;">
        <text term="issue" form="short"/>
        <text variable="collection-number"/>
      </group>
    </group>
  </macro>
  <macro name="issue">
    <group delimiter=" ">
      <text term="issue" form="short"/>
      <text variable="issue"/>
    </group>
  </macro>
  <macro name="volume">
    <choose>
      <if type="bill legislation" match="none">
        <!-- already managed in legislation-report macro -->
        <group delimiter="&#160;">
          <text term="volume" form="short"/>
          <text variable="volume"/>
        </group>
      </if>
    </choose>
  </macro>
  <macro name="number">
    <choose>
      <if type="legal_case report" match="any">
        <choose>
          <if match="any" variable="number">
            <choose>
              <if is-numeric="number">
                <text term="issue" form="short" suffix="&#160;"/>
                <text variable="number"/>
              </if>
              <else>
                <text variable="number"/>
              </else>
            </choose>
          </if>
        </choose>
      </if>
    </choose>
  </macro>
  <macro name="date">
    <choose>
      <if type="legal_case" match="none">
        <!-- date already managed in the content-title macro -->
        <choose>
          <if match="any" variable="issued">
            <date form="text" variable="issued"/>
          </if>
          <else>
            <text term="no date"/>
          </else>
        </choose>
      </if>
    </choose>
  </macro>
  <macro name="url">
    <choose>
      <if match="any" variable="URL">
        <choose>
          <if match="any" variable="accessed">
            <group delimiter=" ">
              <text term="online"/>
              <text variable="URL"/>
              <text term="retrieved" prefix="("/>
              <group>
                <date form="text" variable="accessed"/>
                <text value=")"/>
              </group>
            </group>
          </if>
          <else>
            <text variable="URL"/>
          </else>
        </choose>
      </if>
    </choose>
  </macro>
  <macro name="DOI">
    <choose>
      <if match="any" variable="DOI">
        <text variable="DOI" prefix="DOI:"/>
      </if>
    </choose>
  </macro>
  <macro name="page">
    <choose>
      <if type="report" match="none">
        <!--report should return nb-of-pages, not a range -->
        <group delimiter="&#160;">
          <label variable="page" form="short"/>
          <text variable="page"/>
        </group>
      </if>
    </choose>
  </macro>
  <macro name="number-of-pages">
    <group delimiter="&#160;">
      <choose>
        <if type="report" match="any">
          <!-- allows pages field in report to return nb-of-pages -->
          <text variable="page"/>
        </if>
      </choose>
      <text variable="number-of-pages"/>
      <text term="number-of-pages" plural="true"/>
    </group>
  </macro>
  <macro name="locator">
    <choose>
      <if variable="locator" match="any">
        <group delimiter="&#160;">
          <label variable="locator" form="symbol"/>
          <text variable="locator"/>
        </group>
      </if>
      <else>
        <text macro="page"/>
      </else>
    </choose>
  </macro>
  <macro name="opus-citatum">
    <group delimiter="&#160;">
      <text value="op. cit." font-style="italic"/>
      <text term="note"/>
      <text variable="first-reference-note-number"/>
    </group>
  </macro>
  <macro name="disambiguate">
    <choose>
      <if type="book thesis" disambiguate="true">
        <text macro="volume"/>
      </if>
      <else-if type="bill legislation" disambiguate="true">
        <group delimiter=", ">
          <text macro="container-title"/>
          <text macro="legislation-report"/>
        </group>
      </else-if>
    </choose>
  </macro>
  <macro name="sort-type">
    <choose>
      <if type=" entry-encyclopedia entry-dictionary" match="any">
        <text value="1"/>
      </if>
      <else-if type="book thesis">
        <text value="2"/>
      </else-if>
      <else-if type="chapter article-journal paper-conference">
        <text value="3"/>
      </else-if>
      <else-if type="legal_case">
        <text value="4"/>
      </else-if>
      <else-if type="bill legislation">
        <text value="5"/>
      </else-if>
      <else-if type="treaty">
        <text value="6"/>
      </else-if>
      <else>
        <text value="7"/>
      </else>
    </choose>
  </macro>
  <citation>
    <layout delimiter="&#160;; ">
      <choose>
        <if match="any" position="first">
          <group delimiter=", ">
            <text macro="author"/>
            <text macro="report-institutional-author"/>
            <text macro="content-title"/>
            <!-- includes date, case number, and extra for legal_case and genre+number for report-->
            <text macro="editor"/>
            <text macro="container-title"/>
            <text macro="legislation-report"/>
            <text macro="thesis"/>
            <text macro="publisher"/>
            <text macro="collection"/>
            <text macro="edition"/>
            <text macro="date"/>
            <text macro="volume"/>
            <text macro="issue"/>
            <text macro="translator"/>
            <text macro="note"/>
            <text macro="locator"/>
            <text macro="url"/>
            <text macro="DOI"/>
          </group>
        </if>
        <else-if match="any" position="ibid-with-locator">
          <group delimiter="&#160;">
            <text term="ibid" font-style="italic"/>
            <text macro="locator"/>
          </group>
        </else-if>
        <else-if match="any" position="ibid">
          <text term="ibid" font-style="italic"/>
        </else-if>
        <else-if match="any" position="subsequent">
          <group delimiter=", ">
            <text macro="author"/>
            <text macro="report-institutional-author"/>
            <text macro="title-short"/>
            <text macro="note"/>
            <text macro="disambiguate"/>
            <text macro="opus-citatum"/>
            <text macro="locator"/>
          </group>
        </else-if>
      </choose>
    </layout>
  </citation>
  <bibliography>
    <sort>
      <key macro="sort-type"/>
      <key variable="author"/>
      <key variable="event-date"/>
    </sort>
    <layout suffix=".">
      <group delimiter=", ">
        <choose>
          <if type="bill legislation">
            <!--This field must retain the lower-case style of macro="author"-->
            <text macro="author"/>
          </if>
          <else>
            <text macro="author-biblio"/>
          </else>
        </choose>
        <text macro="report-institutional-author"/>
        <text macro="content-title"/>
        <!-- includes date, case number and extra for legal_case -->
        <text macro="editor-biblio"/>
        <text macro="container-title"/>
        <text macro="legislation-report"/>
        <text macro="thesis"/>
        <text macro="publisher"/>
        <text macro="collection"/>
        <text macro="edition"/>
        <text macro="date"/>
        <text macro="volume"/>
        <text macro="issue"/>
        <text macro="translator-biblio"/>
        <text macro="note"/>
        <text macro="page"/>
        <text macro="number-of-pages"/>
        <text macro="url"/>
        <text macro="DOI"/>
      </group>
    </layout>
  </bibliography>
</style>
