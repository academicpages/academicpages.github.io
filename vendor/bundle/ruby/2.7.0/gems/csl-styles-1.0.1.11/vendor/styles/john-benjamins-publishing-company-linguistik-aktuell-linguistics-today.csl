<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" version="1.0" page-range-format="chicago" demote-non-dropping-particle="never" default-locale="en-US">
  <info>
    <title>John Benjamins Publishing Company - Linguistik Aktuell/Linguistics Today</title>
    <id>http://www.zotero.org/styles/john-benjamins-publishing-company-linguistik-aktuell-linguistics-today</id>
    <link href="http://www.zotero.org/styles/john-benjamins-publishing-company-linguistik-aktuell-linguistics-today" rel="self"/>
    <link href="http://www.zotero.org/styles/john-benjamins-publishing-company-iconicity-in-language-and-literature" rel="template"/>
    <link href="https://benjamins.com/catalog/la" rel="documentation"/>
    <link href="https://forums.zotero.org/discussion/80088/john-benjamins-edited-volume-style-s" rel="documentation"/>
    <author>
      <name>Patrick O'Brien</name>
    </author>
    <category citation-format="author-date"/>
    <category field="linguistics"/>
    <issn>0166-0829</issn>
    <updated>2020-03-03T19:06:45+00:00</updated>
