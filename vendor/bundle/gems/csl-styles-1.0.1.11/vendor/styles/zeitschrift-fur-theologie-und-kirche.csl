  <locale xml:lang="de">
    <terms>
      <term name="editor" form="short">Hg.</term>
    </terms>
  </locale>
  <macro name="author">
    <names variable="author">
      <name font-variant="small-caps" delimiter=" / " delimiter-precedes-last="always" initialize-with="."/>
    </names>
  </macro>
  <macro name="author-short">
    <names variable="author">
      <name form="short" font-variant="small-caps" delimiter=" / " initialize-with=". "/>
    </names>
  </macro>
  <macro name="issued">
    <choose>
      <if variable="issued">
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </if>
      <else>
        <text term="no date" form="short"/>
      </else>
    </choose>
  </macro>
  <macro name="date-and-edition">
    <group>
      <date form="text" variable="original-date" suffix=" ">
        <date-part name="year"/>
      </date>
      <number vertical-align="sup" variable="edition"/>
      <text macro="issued"/>
    </group>
  </macro>
  <macro name="collection-info">
    <group delimiter=" ">
      <text variable="collection-title" form="short"/>
      <text variable="collection-number"/>
    </group>
  </macro>
  <citation et-al-min="4" et-al-use-first="1" disambiguate-add-givenname="true" disambiguate-add-year-suffix="true" collapse="year" cite-group-delimiter=", ">
    <layout delimiter="; ">
      <choose>
        <if match="any" position="first">
          <group delimiter=", ">
            <text macro="author"/>
            <choose>
              <if type="article-journal article-magazine article-newspaper" match="any">
                <group delimiter=" ">
                  <text variable="title"/>
                  <group prefix="(" suffix=")" delimiter=", ">
                    <text variable="container-title"/>
                    <text variable="volume"/>
                    <text macro="issued"/>
                    <text variable="page"/>
                  </group>
                </group>
              </if>
              <else-if type="chapter paper-conference" match="any">
                <group delimiter=" ">
                  <text variable="title"/>
                  <group delimiter=", " prefix="(" suffix=")">
                    <group>
                      <date form="text" variable="original-date" suffix="; ">
                        <date-part name="year"/>
                      </date>
                      <text term="in" suffix=": "/>
                      <group delimiter=", ">
                        <names variable="container-author" font-variant="normal" delimiter=", ">
                          <name font-variant="small-caps" delimiter=" / " delimiter-precedes-last="always" initialize-with="."/>
                          <label form="short" text-case="capitalize-first" prefix=" [" suffix="]"/>
                        </names>
                        <group delimiter=" ">
                          <group delimiter=", ">
                            <text variable="container-title" text-case="title"/>
                            <names variable="editor">
                              <label form="verb-short" suffix=" "/>
                              <name font-variant="small-caps" delimiter=" / " initialize-with="."/>
                            </names>
                          </group>
                          <text macro="collection-info" prefix="[" suffix="]"/>
                        </group>
                      </group>
                    </group>
                    <group>
                      <number vertical-align="sup" variable="edition"/>
                      <text macro="issued"/>
                    </group>
                  </group>
                </group>
              </else-if>
              <else-if type="entry-encyclopedia" match="any">
                <text variable="title" form="short" prefix="Art. "/>
                <group delimiter=", " prefix="(" suffix=")">
                  <group delimiter=" ">
                    <group>
                      <text variable="container-title" form="short"/>
                      <number vertical-align="sup" variable="edition"/>
                    </group>
                    <text variable="volume"/>
                  </group>
                  <date date-parts="year" form="text" variable="issued">
                    <date-part name="year"/>
                  </date>
                  <text variable="page"/>
                </group>
              </else-if>
              <else>
                <text variable="title"/>
                <text macro="collection-info" prefix="(" suffix=")"/>
                <names variable="editor translator" delimiter=", ">
                  <label form="verb-short" suffix=" "/>
                  <name font-variant="small-caps" delimiter=" / " initialize-with="."/>
                </names>
                <text macro="date-and-edition"/>
              </else>
            </choose>
            <text variable="locator"/>
          </group>
        </if>
        <else-if match="any" position="ibid-with-locator">
          <group delimiter=" ">
            <text value="AaO"/>
            <text variable="locator"/>
          </group>
        </else-if>
        <else-if match="any" position="ibid">
          <text term="ibid"/>
        </else-if>
        <else>
          <group delimiter=", ">
            <group delimiter=" ">
              <text macro="author-short"/>
              <group delimiter=" " prefix="(" suffix=")">
                <text value="s. Anm."/>
                <text variable="first-reference-note-number"/>
              </group>
            </group>
            <text variable="locator"/>
          </group>
        </else>
      </choose>
    </layout>
  </citation>
  <bibliography et-al-min="4" et-al-use-first="1">
    <sort>
      <key macro="author"/>
      <key macro="issued" sort="ascending"/>
    </sort>
    <layout>
      <group delimiter=", ">
        <text macro="author"/>
        <choose>
          <if type="article-journal article-magazine article-newspaper" match="any">
