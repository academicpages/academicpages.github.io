  langid = {english},
  keywords = {\#SARS-CoV-2,\#SpikeProtein},
  file = {/home/florian/Zotero/storage/NGNF4J2S/pcbi.1008790.s001.pdf;/home/florian/Zotero/storage/TD8XJYKX/Sikora et al. - 2021 - Computational epitope map of SARS-CoV-2 spike prot.pdf}
