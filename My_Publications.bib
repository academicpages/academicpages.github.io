@article{sikoraComputationalEpitopeMap2021,
  title = {Computational Epitope Map of {{SARS-CoV-2}} Spike Protein},
  author = {Sikora, Mateusz and {von B{\"u}low}, S{\"o}ren and Blanc, Florian E. C. and Gecht, Michael and Covino, Roberto and Hummer, Gerhard},
  year = {2021},
