@article{Kim_Colominas Ventura_2020, place={Cerdayola del Vallès, Spain}, title={Avaluació humana de traducció automàtica neuronal i informe de progrés anual: estudi de cas del castellà al coreà}, url={https://revistes.uab.cat/tradumatica/article/view/n18-ahrii-colominas}, DOI={10.5565/rev/tradumatica.241}, abstractNote={Aquest article proposa la primera avaluació de traducció automàtica neuronal en la combinació lingüística espanyol-coreà. Per fer-ho s&amp;#039;han aplicat quatre mètodes d&amp;#039;avaluació humana: l&amp;#039;avaluació directa, la comparació a través de la classificació dels segments i l&amp;#039;anàlisi del temps i de l&amp;#039;esforç de postedició del text traduït automàticament (en anglès, MTPE), i un mètode d&amp;#039;avaluació semiautomàtica.El motor detraducció automàtica neuronal utilitzat ha estat Google Translate, en concret en el seu domini de notícies. Després de ser avaluat per sis traductors professionals es constata que el motor augmenta el rendiment en un 78% i la productivitat en un 37%. A més, el 40,249% dels resultats del motor es modifiquen amb un interval de 15 mesos, de manera que mostra un índex de millora del 11%.}, number={18}, journal={Tradumàtica tecnologies de la traducció}, author={Kim, Ahrii and Colominas Ventura, Carme}, year={2020}, month={Dec.}, pages={33–48} }